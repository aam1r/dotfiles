[user]
    name = Aamir Mansoor
    email = me@aam1r.com
[github]
    user = aam1r
[alias]
    br = branch
    co = checkout
    st = status
    patch = add --patch
    sha1 = !sh -c 'git rev-parse ${1-`echo HEAD`}' -

    # diff
    d = diff                          # diff unstaged changes
    dc = diff --cached                # diff staged changes
    last = diff HEAD^                 # diff last committed change

    # logging
    oneline = log --oneline
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[format]
    pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[color]
    ui = auto
[color "branch"]
    current = green reverse
    local = green
    remote = cyan
[color "diff"]
    commit = magenta bold
    frag = cyan
    meta = bold
    new = green bold
    old = red bold
    whitespace = yellow reverse
[color "interactive"]
    prompt = green bold
    header = cyan
    help = yellow
    error = red bold
[color "status"]
    changed = yellow
[apply]
    whitespace = fix
[pager]
    status = true
    show-branch = true
[log]
    decorate = short
[credential]
    helper = osxkeychain
